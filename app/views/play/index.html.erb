
<h1>Games Listing</h1>

<% if player_signed_in? %>
  <%= link_to "New Game", play_pvp_path %>
<% end %>

<table>
  <thead>
    <tr>
      <td>ID</td>
      <td>Title</td>
      <td>Player 1</td>
      <td>Player 2</td>
      <td>Action</td>
    </tr>
  </thead>
  <tbody>

    <% @games.each do |game| %>
      <tr>
        <td><%= game.id %></td>
        <td><%= game.title %></td>
        <td><%= game.p1 %></td>
        <td><%= game.p2 %></td>
        <td>
          <% if player_signed_in? %>
            <%= link_to "Join Game", play_join_path(play: { p2: current_player.id }, id: game.id), method: :post %>
          <% end %>

        </td>
      </tr>
    <% end %>

  </tbody>
</table>
